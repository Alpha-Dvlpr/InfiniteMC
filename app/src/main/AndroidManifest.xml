                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".users.EditUser"
            android:screenOrientation="locked" />
        <activity
            android:name=".categories.CategoriesList"
            android:screenOrientation="locked" />
        <activity
            android:name=".articles.EditArticle"
            android:screenOrientation="locked" />
        <activity
            android:name=".articles.ArticlesList"
            android:screenOrientation="locked" />
        <activity
            android:name=".users.UsersList"
            android:screenOrientation="locked" />
        <activity
            android:name=".users.NewUser"
            android:screenOrientation="locked"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".navigation.Profile"
            android:screenOrientation="locked"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".navigation.MainInterface"
            android:screenOrientation="locked" />
        <activity
            android:name=".articles.NewArticle"
            android:screenOrientation="locked" />
        <activity
            android:name=".navigation.Content"
            android:screenOrientation="locked" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2122172706327985~8237512049" />
    </application>

</manifest>